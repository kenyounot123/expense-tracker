<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<% content_for :title do %>
  Sign in
<% end %>

<%= form_with url: session_path, class: "margin-block-double card flex flex-column" do |form| %>
  <h1 class="text-xx-large text-center"><b>Welcome Back</b></h1>
  <%= form.label :email_address, "Email Address", class: "text-positive text-label" %>
  <%= form.email_field :email_address, 
                      required: true, 
                      autofocus: true, 
                      autocomplete: "username", 
                      placeholder: "Enter your email address", 
                      value: params[:email_address] %><br>

  <%= form.label :password, "Password", class: "text-positive text-label" %>
  <%= form.password_field :password, 
                         required: true, 
                         autocomplete: "current-password", 
                         placeholder: "Enter your password", 
                         maxlength: 72 %><br>

  <p class="text-right"><%= link_to "Forgot your password?", new_password_path, class: "text-positive" %></p>

  <%= form.submit "Sign in", class: "btn btn-login" %>

  <hr class="margin-block">

  <p class="text-center">Don't have an account? <%= link_to "Sign up", new_password_path, class: "text-positive" %></p>
<% end %>
