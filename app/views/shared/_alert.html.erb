<% if flash[:alert] %>
  <div class="alert alert-error" data-controller="close-content" data-close-content-target="content">
    <%= flash[:alert] %>
    <div class="btn btn-close alert-close" data-action="click->close-content#close" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
      </svg>
    </div>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success" data-controller="close-content" data-close-content-target="content">
    <%= flash[:notice] %>
    <div class="btn btn-close alert-close" data-action="click->close-content#close" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
      </svg>
    </div>
  </div>
<% end %>