<%# Add form validation %>
<% content_for :title do %>
  Sign up
<% end %>

<div class="flex justify-center items-center min-h-screen">
  <%= form_with url: registrations_path, class: "bg-dark dark:bg-white rounded-lg shadow-lg p-8 w-full max-w-md mx-auto" do |form| %>
    <h1 class="text-3xl md:text-4xl font-bold text-center mb-8 text-white dark:text-bg">Create an Account</h1>
    
    <div class="mb-6">
      <%= form.label :email_address, "Email Address", class: "text-positive dark:text-positive-light font-semibold block mb-2" %>
      <%= form.email_field :email_address, 
                          required: true, 
                          autofocus: true, 
                          autocomplete: "username", 
                          placeholder: "Enter your email address", 
                          value: params[:email_address],
                          class: "bg-bg dark:bg-bg-light text-white dark:text-bg border border-positive dark:border-positive-light rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-positive dark:focus:ring-positive-light" %>
    </div>

    <div class="mb-6">
      <%= form.label :password, "Password", class: "text-positive dark:text-positive-light font-semibold block mb-2" %>
      <%= form.password_field :password, 
                            required: true, 
                            autocomplete: "current-password", 
                            placeholder: "Enter your password", 
                            maxlength: 72,
                            class: "bg-bg dark:bg-bg-light text-white dark:text-bg border border-positive dark:border-positive-light rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-positive dark:focus:ring-positive-light" %>
    </div>

    <div class="mb-8">
      <%= form.label :password_confirmation, "Confirm Password", class: "text-positive dark:text-positive-light font-semibold block mb-2" %>
      <%= form.password_field :password_confirmation, 
                            required: true, 
                            autocomplete: "new-password", 
                            placeholder: "Confirm your password", 
                            maxlength: 72,
                            class: "bg-bg dark:bg-bg-light text-white dark:text-bg border border-positive dark:border-positive-light rounded-md py-2 px-4 w-full focus:outline-none focus:ring-2 focus:ring-positive dark:focus:ring-positive-light" %>
    </div>

    <%= form.submit "Create Account", class: "bg-positive dark:bg-positive-light text-white font-semibold py-2 px-4 rounded-full w-full hover:opacity-80 transition-all duration-300 mb-6" %>

    <div class="border-t border-positive/30 dark:border-positive-light/30 pt-6 mt-2">
      <p class="text-center text-white dark:text-bg">
        Already have an account? 
        <%= link_to "Sign in", login_path, class: "text-positive dark:text-positive-light hover:underline" %>
      </p>
    </div>
  <% end %>
</div>
