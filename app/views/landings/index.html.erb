        <div class="bg-dark rounded-2xl shadow-xl overflow-hidden relative z-10">
          <%= image_tag "hero.svg", alt: "TrackExp Dashboard", class: "w-full" %>
        </div>
        <div class="absolute -bottom-6 -right-6 w-4/5 h-4/5 bg-positive rounded-2xl -z-10"></div>
      </div>
    </div>
  </div>
</section>

