<%= render "shared/header", title: "Search and Advanced filters", back_path: expenses_path %>

<%= render "search_form" %>

<div class="search-results margin-block-double">
  <table id="search-table">
    <thead>
      <tr>
        <th class="search-table__header">No.</th>
        <th class="search-table__header">
          <div class="flex justify-between items-center">
            <span>Description</span>
            <%= sort_indicator_for("description") %>
          </div>
        </th>
        <th class="search-table__header">
          Expense Type
        </th>
        <th class="search-table__header">
          Income or Expense
        </th>
        <th class="search-table__header">
          <div class="flex justify-between items-center">
            <span>Date</span>
            <%= sort_indicator_for("date") %>
          </div>
        </th>
        <th class="search-table__header">
          <div class="flex justify-between items-center">
            <span>Amount</span>
            <%= sort_indicator_for("amount") %>
          </div>
        </th>
        <th class="search-table__header">
        </th>
      </tr>
    </thead>
    <tbody data-controller="row-link">
      <%= render "expense", expenses: @expenses %>

      <% if @expenses.empty? %>
        <tr>
          <td colspan="7" class="search-table__empty">No expenses found.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

