<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Expense Type</th>
      <th>Income or Expense</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.date.strftime("%b %d, %Y") %></td>
        <td><%= expense.description %></td>
        <td><%= expense.expense_type.humanize %></td>
        <td><%= expense.income? ? "Income" : "Expense" %></td>
        <td><%= number_to_currency(expense.amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @expenses.empty? %>
  <p class="text-center">No expenses found.</p>
<% end %>
