<% content_for :title do %>
  <%= @expense.description.truncate(20) %>
<% end %>

<% content_for :header do %>
  <%= render "shared/header", title: @expense.income? ? "Income" : "Expense", back_path: nil %>
<% end %>

<% content_for :analytics do %>
   <%= pie_chart [
         ["Current", number_to_percentage((@expense.amount / user_total_spendings) * 100, precision: 2)],
         ["Other Expenses", number_to_percentage((user_total_spendings - @expense.amount) / user_total_spendings * 100, precision: 2)]
       ],
       suffix: "%",
       prefix: "",
       donut: true,
       colors: ["#CD4FF7", "#8e7ff5"]
       %>
<% end %>


<div class="my-4 flex gap-4 items-center justify-end">
  <%= link_to "Edit", edit_expense_path(@expense), class: "bg-accent text-white font-semibold py-2 px-4 rounded-full inline-flex items-center hover:opacity-80 transition-all duration-300" %>
  <%# TODO: Make this a modal  %>
  <%= link_to "Delete", expense_path(@expense), 
      class: "bg-red text-white font-semibold py-2 px-4 rounded-full inline-flex items-center hover:opacity-80 transition-all duration-300", 
      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this expense?" } %>
</div>
<div class="bg-dark rounded-card shadow-card p-6 mb-4">
  <div class="text-2xl font-bold text-positive break-words hyphens-auto mb-4">
    <p>
      <%= @expense.description %>
    </p>
  </div>
  <div class="flex justify-between">
    <span class="text-4xl font-bold text-accent"><%= number_to_currency(@expense.amount) %></span>
    <% if @expense.income? %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 font-bold text-green">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 font-bold text-red">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
      </svg>
    <% end %>
  </div>
  <div class="flex justify-between text-sm text-white opacity-80 my-4">
    <span><%= @expense.date.strftime("%b %d, %Y") %></span>
    <span><%= @expense.expense_type.humanize %> Payment</span>
  </div>
  <div>
    <% @expense.categories.each do |category| %>
      <span class="inline-block bg-dark text-white border border-positive rounded-md px-3 py-1.5 text-sm font-bold uppercase tracking-wider mr-2 mb-2"><%= category.name %></span>
    <% end %>
  </div>
</div>